<nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="/">Scraper Gazette</a>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">

            <li class="nav-item">
                <a class="nav-link" href="/">Home
                </a>
            </li>

            <li class="nav-item active"></li>
            <a class="nav-link" href="/saved">View Saved Articles
                <span class="sr-only">(current)</span>
            </a>
            </li>

            <li class="nav-item">
                <a class="btn btn-danger clear"><span class='fas fa-broom'></span></a>
            </li>
            
        </ul>
    </div>
</nav>

<div class="jumbotron text-center">
    <div class="overlay">
    </div>
    <div class="background-image">
    </div>
    <div class="caption">
        <h1 class="topPart">Saved News</h1>
        <p>Stored here so you can read them at your leisure</p>
    </div>
</div>
<div class="container-fluid article-container">
    {{#each articles}}
    <div data-_id={{this._id}} class="card">
        <div class="card-header">
            <h3>
                <a class="article-link" target="_blank" rel="noopener noreferrer"
                    href="{{this.url}}">{{this.headline}}</a>
                <a class="btn btn-info comments"><span class='far fa-comments'></span></a>
                <a class="btn btn-danger delete"><span class='fa fa-trash'></span></a>
            </h3>
        </div>
        <div class="card-body">{{this.summary}}</div>
    </div>
    {{/each}}
    {{#unless articles.length}}
    <div class="alert alert-warning text-center">
        <h4>Nothing stored here, you're all caught up!</h4>
    </div>
    <div class="card">
        <div class="card-header text-center">
            <h3>What do you want to do now?</h3>
        </div>
        <div class="card-body text-center">
            <h4>
                <a href="/">Scrape for articles to save</a>
            </h4>
        </div>
    </div>
    {{/unless}}
</div>



